<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.taylorsilva.shopify.MainActivity">

    <TextView
        android:id="@+id/revenue_cad_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/revenue_cad"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/activity_font_size"/>

    <TextView
        android:id="@+id/revenue_cad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/revenue_cad_label"
        android:layout_marginTop="@dimen/activity_margin_top"
        android:layout_centerHorizontal="true"
        android:text="@string/holder_dollar_value"
        android:textSize="@dimen/activity_font_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/revenue_usd_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/revenue_usd"
        android:layout_below="@+id/revenue_cad"
        android:layout_marginTop="@dimen/activity_margin_top"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/activity_font_size"/>

    <TextView
        android:id="@+id/revenue_usd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/revenue_usd_label"
        android:layout_marginTop="@dimen/activity_margin_top"
        android:layout_centerHorizontal="true"
        android:text="@string/holder_dollar_value"
        android:textSize="@dimen/activity_font_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/keyboards_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keyboards"
        android:layout_below="@+id/revenue_usd"
        android:layout_marginTop="@dimen/activity_margin_top"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/activity_font_size"/>

    <TextView
        android:id="@+id/keyboards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keyboards_label"
        android:layout_marginTop="@dimen/activity_margin_top"
        android:layout_centerHorizontal="true"
        android:text="@string/holder_value"
        android:textSize="@dimen/activity_font_size"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/refresh"
        android:textSize="@dimen/activity_font_size"/>

</RelativeLayout>
